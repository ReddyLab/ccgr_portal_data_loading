{
  "$id": "https://ccgr-portal.dhs.duke.edu/experiment.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Experiment Metadata",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "biosamples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cell_type": {
            "type": "string"
          },
          "tissue_type": {
            "type": "string"
          }
        }
      }
    },
    "assay": {
      "type": "string",
      "enum": [
        "Perturb-Seq",
        "Proliferation screen",
        "ATAC-STARR-seq",
        "Flow-FISH CRISPR screen"
      ]
    },
    "functional_characterization_modality": {
      "type": "string",
      "enum": ["Reporter Assay", "CRISPRa", "CRISPRi"]
    },
    "source type": {
      "type": "string",
      "enum": ["DHS", "gRNA"]
    },
    "parent source type": {
      "type": "string",
      "enum": ["DHS", "gRNA"]
    },
    "year": {
      "type": "string"
    },
    "attribution": {
      "properties": {
        "pi": {
          "type": "string"
        },
        "experimentalist": {
          "type": "string"
        },
        "institution": {
          "type": "string"
        },
        "project": {
          "type": "string"
        },
        "datasource_url": {
          "type": "string"
        },
        "lab_url": {
          "type": "string"
        }
      },
      "required": ["pi", "institution"]
    },
    "tested_elements_file": {
      "properties": {
        "description": {
          "type": "string"
        },
        "filename": { "type": "string" },
        "file_location": { "type": "string" },
        "genome_assembly": {
          "type": "string",
          "enum": ["hg19", "hg38"]
        }
      }
    }
  }
}
